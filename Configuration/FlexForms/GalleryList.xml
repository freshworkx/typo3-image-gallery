								<numIndex index="3" type="array">
									<label>LLL:EXT:bm_image_gallery/Resources/Private/Language/locallang_be.xlf:ffds.mode.3</label>
									<value>2</value>
								</numIndex>
							</items>
						</config>
					</settings.mode>

					<settings.galleryPage>
						<label>LLL:EXT:bm_image_gallery/Resources/Private/Language/locallang_be.xlf:ffds.gallery_page</label>
						<displayCond><![CDATA[FIELD:sDEF.settings.mode:=:1]]></displayCond>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
								</suggest>
							</wizards>
						</config>
					</settings.galleryPage>
