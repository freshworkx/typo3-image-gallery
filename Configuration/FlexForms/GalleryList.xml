									<label>LLL:EXT:bm_image_gallery/Resources/Private/Language/locallang_be.xlf:ffds.orderBy.modificationDate</label>
									<value>modification_date</value>
								</numIndex>
							</items>
						</config>
					</settings.orderBy>

